<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    @* Barra de navegação *@
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("KrGames", "Home", "Jogo", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Lista de Jogos", "ListarJogos", "Jogo")</li>
                    <li>@Html.ActionLink("Lista de Generos", "ListarGenero", "Genero")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Usuarios", "Index", "Usuario")</li>
                        <li>@Html.ActionLink("Cadastrar Jogos", "Index", "Jogo")</li>
                        <li>@Html.ActionLink("Cadastrar Gênero", "Index", "Genero")</li>
                        <li>@Html.ActionLink("Cadastrar Mídia", "Index", "Midia")</li>
                    }
                    <li>@Html.ActionLink("Carrinho", "Index", "ItemVenda")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Usuario")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Usuario")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @*Conteúdo*@
    <div class="container body-content">
        @RenderBody()
    </div>

    @* Rodapé *@

    <footer class="container body-content" style="text-align:center">
        <hr />
        <p>&copy; @DateTime.Now.Year - KrGames</p>
    </footer>
</body>
</html>
